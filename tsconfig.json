{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "target": "es5",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib":[ "es2017","dom" ],
    "declaration": true,
    "sourceMap": true,
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  },
  "include": [
    "lib/**/*.ts",
    "./typings-custom/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts",
    "examples"
  ],
  "files": [
    "index.ts"
  ]
}